.terms-list {
	list-style: none;
	padding: unset;
	margin-block-start: 0.25rem;
	margin-block-end: unset;
	display: flex;
	align-items: center;
	gap: 0.25rem;
	font-size: var( --font-size-1 );
	line-height: 1.425;

	li {
		display: inline-flex;

		&:not( :last-child )::after {
			content: ',';
		}
	}
}
