html,
body {
	line-height: 1.625;
}

body {
	margin: 1rem;
}

/**
 * Layouts
 */

.container {
	margin-inline: auto;
	max-width: 800px;
}

/**
 * Components
 */

.site-name {
	font-size: 1.5rem;

	a {
		text-decoration: unset;
		color: inherit;

		&:focus,
		&:hover {
			text-decoration: revert;
		}
	}
}
