@import 'highlight.js/styles/atom-one-light.css' ( prefers-color-scheme: light );
@import 'highlight.js/styles/atom-one-dark.css' ( prefers-color-scheme: dark );

html,
body {
	line-height: 1.625;
}

body {
	margin: 1rem;
}

/**
 * Layouts
 */

.container {
	margin-inline: auto;
	max-width: 800px;
}

/**
 * Components
 */

.site-branding {
	font-size: 1.5rem;

	a {
		text-decoration: unset;
		color: inherit;

		&:focus,
		&:hover {
			text-decoration: revert;
		}
	}
}
